class Solution {
public:
    int search(vector<int>& nums, int target) {
        int size = nums.size();
        int left =0, right = size-1;
        while(left<=right){
            int mid = (left+ right)/2;
            if(nums[mid]==target){
                return mid;
            }
            // checking left part sorted
            if(nums[mid]>=nums[left]){
                  if(nums[left]<= target && target<= nums[mid]){
                    right = mid-1;
                  }
                  else{
                    left = mid+1;
                  }
            }
            //checking right part sorted
            else{
                if(nums[mid]<= target && target<= nums[right]){
                    left = mid+1;
                }
                else{
                    right = mid-1;
                }
            }
        }
        return -1;
    }
};
